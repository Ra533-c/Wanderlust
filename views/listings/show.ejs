<% layout("/layouts/boilerplates.ejs") %>
<% block("title" , "Listing Details") %>

<script>
    // Data passed from Server to Client-side map.js
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listingById  = <%- JSON.stringify(listingById) %>;
</script>

<body>
    <div class="row mt-3">
        <!-- 1. Content ko center kiya using offset-2 -->
        <div class="col-8 offset-2">
            
            <h3><b>Listings details</b></h3><br>
            <!-- 2. Extra col-6 wrappers hata diye -->
            <div class="card listing-card">
                <img src="<%= listingById.image.url %>" class="card-img-top show-img" alt="listing image">
                <div class="card-body">
                    <p class="card-text">
                        <p><b><%= listingById.title %></b></p>
                        <i><b>Owned by : </b><%= listingById.owner.username %>~</i>
                        <p><i><%= listingById.description %></i></p>
                        <p><b>&#8377;<%= listingById.prize.toLocaleString("en-IN") %></b></p>
                        <p><b><%= listingById.location %></b></p>
                        <p><b><%= listingById.country %></b></p>
                    </p>
                </div>
            </div>
            <br>
            <% if(currUser && listingById.owner._id.equals(currUser._id)){ %>
            <div class="btns mb-5">
                <a href="/listing/<%= listingById._id %>/edit" class="btn btn-dark add-btn">Edit</a>
                <form method="POST" action="/listing/<%= listingById._id %>?_method=DELETE" class="d-inline">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
            <% } %>
            <br>
            <hr>
            <div class="col-12 mb-5">
                <% if(currUser ){ %>
                <h4>Leave a Review</h4>
                <form action="/listing/<%= listingById._id %>/reviews" method="POST" novalidate class="needs-validation" >
                    <label for="rating" class="form-label">Ratings:</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>

                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea class="form-control" type="text" name="review[comment]" id="comment" rows="3" cols="90" required></textarea>
                        <div class="invalid-feedback">Please Add Some Comments for Review.</div>
                        <button  class="btn btn-dark mt-2">Submit</button>
                    </div>
                </form>
                <% } %>
                
                <% if(listingById.reviews.length > 0) { %>
                <hr>
                <div class="row">
                    <br>
                    <h4>All Reviews</h4>
                    <br>
                    <p><b><%= listingById.reviews.length %> Reviews </b></p>
                <% for(let review of listingById.reviews){ %>
                    <div class="card review-card col-5  ms-5 mb-3">
                        <div class="card-body">
                            <h6 class="card-title">@<%= review.author.username %></h6>
                            <p class="card-text">Comment: <%= review.comment %></p>
                            <h6>Ratings:</h6>
                            <p class="card-text"><%= review.rating %>/5 stars</p>
                            <p class="starability-result" data-rating="<%= review.rating %>">
                                Rated: 3 stars
                            </p>
                        </div>
                        <br>
                        <form action="/listing/<%= listingById._id %>/reviews/<%= review._id %>?_method=DELETE"  class="mb-2" method="POST" >
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                <% } %>
                </div>
                <% } %>
                <br>

            </div>

            <div class="col-12 mb-5">
                <h5>Where you'll be </h5>
                <div id="map">
                </div>
            </div>

        </div>
    </div>
    <script src="/js/map.js"></script>
</body>